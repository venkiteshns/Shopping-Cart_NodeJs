<div class="container">
  <div class="row">
      <table class="table mt-5">
        <tr>
          <th scope="col">Item</th>
          <th scope="col">Title</th>
          <th scope="col">Quantity</th>
          <th></th>
        </tr>
        {{#each products}}
          <tr id="{{this.productDetails._id}}">
            <td><img style="height: 80px; width: 80px;" src="/product-images/{{this.productDetails._id}}.jpg" alt=""></td>
            <td>{{this.productDetails.name}}</td>
            <td>
              <button class="btn btn-secondary me-2" onclick="changeQuantity('{{this._id}}', '{{this.productDetails._id}}', -1)">-</button>
              <span class="product-quantity"  id="quantity-{{this.productDetails._id}}">{{this.quantity}}</span>
              <button class="btn btn-secondary ms-2" onclick="changeQuantity('{{this._id}}', '{{this.productDetails._id}}', 1)">+</button>
            </td>
            <td><a  class="btn btn-danger" onclick="return confirm('do you want to remove this item')" href="/remove-item/{{this.productDetails._id}}">Remove</a></td>
          </tr>
        {{/each}}
      </table>
  </div>
</div>
